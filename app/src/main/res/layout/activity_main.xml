<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity">

    <LinearLayout
        android:id="@+id/linearMenu"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#CACACA"
        >
        <ImageView
            android:id="@+id/imageHappy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_happy"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/imageRandom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_random"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/imageSun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_sun"
            android:layout_weight="1"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linearMenu"
        android:text="nome usuario"
        />
    <TextView
        android:id="@+id/textPhase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="frase motivacional"
        app:layout_constraintTop_toBottomOf="@id/textUserName"
        />
    <Button
        android:id="@+id/btnNewPhase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nova frase"
        app:layout_constraintTop_toBottomOf="@id/textPhase"
        />


</androidx.constraintlayout.widget.ConstraintLayout>